{
    "name": "bonfim/tpl",
    "type": "library",
    "description": "Gerenciador de Templates PHP",
    "keywords": [
        "EdsonOnildo",
        "PHP-Template-Engine"
    ],
    "homepage": "https://github.com/EdsonOnildoJR/PHP-Template-Engine",
    "license": "MIT",
    "authors": [
        {
            "name": "Edson Onildo",
            "email": "inbox.edsononildo@gmail.com",
            "homepage": "https://github.com/EdsonOnildoJR",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.1",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7.0",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/var-dumper": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "Bonfim\\Tpl\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bonfim\\Tpl\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
