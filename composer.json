{
    "name": "sketchphp/sketch",
    "type": "library",
    "description": "Sketch is an PHP template engine and provide a better way to produce dynamic web pages.",
    "homepage": "https://github.com/EdsonOnildoJR/Sketch",
    "license": "MIT",
    "authors": [
        {
            "name": "Edson Onildo",
            "email": "inbox.edsononildo@gmail.com",
            "homepage": "https://github.com/EdsonOnildoJR",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=7.1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Sketch\\": "src/Sketch/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/Sketch/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "example": "php -S localhost:3000 -t examples",
        "check": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "sort-packages": true
    }
}
